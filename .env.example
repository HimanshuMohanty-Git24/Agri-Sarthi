# ──────────────────────────────────────────────────────────────────
# AgriSarthi — Environment Variables
# Copy this to .env and fill in your values
# ──────────────────────────────────────────────────────────────────

# ─── Databricks ──────────────────────────────────────────────────
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your_databricks_pat_token
DATABRICKS_AGENT_ENDPOINT=agents_agrisarthi-main-agrisarthi_agent
DATABRICKS_SQL_WAREHOUSE_ID=your_sql_warehouse_id

# ─── Lakebase / Serverless PostgreSQL ────────────────────────────
LAKEBASE_HOST=your_lakebase_host
LAKEBASE_PORT=5432
LAKEBASE_DB=agrisarthi
LAKEBASE_USER=your_lakebase_user
LAKEBASE_PASSWORD=your_lakebase_password

# ─── Sarvam AI (Indic language STT/TTS/Translation) ─────────────
# Used by backend (voice) via api-subscription-key header
SARVAM_API_KEY=your_sarvam_api_key
# Used by whatsapp bot via Authorization header
SARVAM_AI_API_KEY=your_sarvam_api_key

# ─── Weather ─────────────────────────────────────────────────────
OPENWEATHERMAP_API_KEY=your_openweather_key

# ─── Twilio (Voice Calls) ───────────────────────────────────────
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# ─── Ngrok (expose local server to Twilio) ──────────────────────
NGROK_URL=https://your-ngrok-url.ngrok-free.app

# ─── WhatsApp Bot (WPPConnect) ───────────────────────────────────
WPPCONNECT_BASE_URL=http://localhost:21465
WPPCONNECT_SESSION_NAME=your_session
WPPCONNECT_SECRET_KEY=your_secret
WPPCONNECT_TOKEN=your_token
WAIT_TIME=2

# ─── Groq (WhatsApp voice transcription — optional) ─────────────
GROQ_API_KEY=your_groq_api_key

# ─── data.gov.in (Mandi prices ingestion script) ────────────────
DATAGOV_API_KEY=your_datagov_api_key
